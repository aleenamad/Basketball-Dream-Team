  </div>
    <div class="container">
      <h3><a href="/players/show">Go Back to Player List</a></h3>
      <h1>Edit Player</h1>
      <form action="/players/update/<%= playerz._id %>" method="post">
      <table class="table table-striped table-dark">
          <thead>
   <tr>
     <th scope="col">Name</th>
     <th scope="col">Team</th>
     <th scope="col">Position</th>
     <th scope="col">Value</th>

   </tr>
 </thead>
          <tbody>
            <tr>
              <td><input type="text" name="name" value="<%= playerz.name %>" /></td>
              <td><input type="text" name="team" value="<%= playerz.team %>" /></td>
              <td><input type="text" name="position" value="<%= playerz.positionPlayed %>" /></td>
              <td><input type="number" name="value" value="<%= playerz.value %>" /></td>
            </tr>
            <tr>
              <td colspan="2"><button type="submit">Update</button></td>
            </tr>
          </tbody>
        </table>
      </form>
      <br>
      <form action="/players/delete/<%= playerz._id%>" method="post" style="text-align: center">
        <button type="submit">DELETE</button>
      </form>
    </div>
  </body>
